.footer-about {
  flex: 1;
  display: flex;
  flex-direction: column;

  &_logo {
    height: 30px;
    fill: var(--white);
    margin: 0 auto;
  }

  &_text {
    color: var(--white);
    margin-top: calc(var(--unitSpacing) * 1.5);
    text-align: center;

    &_app {
      font-weight: bold;
    }
  }
}
