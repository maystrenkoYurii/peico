.toolbar {
  position: fixed;
  z-index: var(--zIndexToolbar);
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  background: transparent;
  min-height: var(--toolbarHeight);
  transition: background var(--transition) ease-in-out;

  &_hovered {
    background: var(--blackA6);
  }

  &_layout {
    flex-direction: row;
  }
}
