.toolbar {
  position: fixed;
  z-index: var(--zIndexToolbar);
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  background: transparent;
  height: var(--toolbarHeight);
  transition: all var(--transition) ease-in-out;

  &_hovered {
    background: var(--blackA6);
  }

  &_hidden {
    margin-top: calc(-1 * var(--toolbarHeight));
  }

  &_layout {
    flex-direction: row;
  }
}
