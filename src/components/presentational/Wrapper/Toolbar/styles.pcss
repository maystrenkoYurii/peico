.toolbar {
  position: fixed;
  z-index: var(--zIndexToolbar);
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  background: transparent;
  transition: background var(--transition) ease-in-out;

  &_hovered {
    background: var(--blackA4);
  }

  &_layout {
    flex-direction: row;
  }
}

@media (width <= 768px) {
  .toolbar {
    background: var(--whiteA2);

    &_hovered {
      background: var(--blackA4);
    }
  }
}
