.button {
  cursor: pointer;
  position: relative;
  border-radius: 5px;
  transition:
    color var(--transition) ease-in-out,
    background var(--transition) ease-in-out,
    opacity var(--transition) ease-in-out,
    border-color var(--transition) ease-in-out,
    box-shadow var(--transition) ease-in-out;

  &::before,
  &::after {
    position: absolute;
    z-index: 0;
    top: -1px;
    right: -1px;
    bottom: -1px;
    left: -1px;
    content: '';
    border-radius: inherit;
    transition: inherit;
    cursor: inherit;
    opacity: 0.3;
  }

  &_contained {
    border: 1px solid transparent;
    background: currentColor;

    &:hover,
    &:active {
      &::after {
        opacity: 1;
        background: var(--whiteA3);
      }
    }
  }

  &_outlined {
    border: 1px solid currentColor;
    background: transparent;

    &:hover,
    &:active {
      &::after {
        background: currentColor;
      }
    }
  }

  &_label {
    position: relative;
    z-index: 1;
    transition: inherit;
    cursor: inherit;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    flex-wrap: nowrap;
    white-space: nowrap;
    user-select: none;
    padding: 0 30px;

    &_normal {
      min-height: 54px;
      font-size: 14px;
    }

    &_small {
      min-height: 48px;
      font-size: 14px;
    }
  }
}
